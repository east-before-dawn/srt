<p>作为写过的单位行花时间最久的代码，留作纪念。（尼玛一上午调程序调死了！！）</p>#include"stdio.h"<br>#include"stdlib.h"<br>#include"string.h"<br>inline int ilog(int exp)<br>{<br>    int i=0;<br>    while(exp&gt;&gt;=1)i++;<br>    return i;<br>}<br>inline void trans(int* tl,int*ts,int b)<br>{<br>    int l,s;<br>    l=b?(*tl**tl+2**tl**ts):(*tl**tl+*ts**ts);<br>    s=b?(*tl**tl+*ts**ts):(2**tl**ts-*ts**ts);<br>    *tl=l,*ts=s;<br>}<br>int fib(int n)<br>{<br>    if(n==0||n==1)return 1;<br>    int size=ilog(n);<br>    int *const bg = (int*)calloc(size ,sizeof(int));<br>    int *const ed =bg+size;<br>    int* p=bg;<br>    while(p!=ed)<br>    {<br>        *p+++=n%2;<br>        n/=2;<br>    }<br>    int s=1,l=1;<br>    p=ed;<br>    while(p--!=bg)trans(&amp;l,&amp;s,*p);<br>    return l;<br>}<br>int main()<br>{<br>    int i=0;<br>    while(1)<br>    {<br>        printf("%d %d",i++,fib(i));<br>        getchar();<br>    }<br>}
